<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
    android:id="@+id/group_time"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">
    <RadioButton
        android:id="@+id/time_10"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:checked="true"
        android:text="10:00"/>
    <RadioButton
        android:id="@+id/time_12"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="12:00"/>
    <RadioButton
        android:id="@+id/time_14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="14:00"/>
    <RadioButton
        android:id="@+id/time_18"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="18:00"/>
    <RadioButton
        android:id="@+id/time_20"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="20:00"/>
</RadioGroup>
    <RadioGroup
            android:id="@+id/group_interval"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/time_300"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="300ms"/>
            <RadioButton
                android:id="@+id/time_500"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="500ms"/>
            <RadioButton
                android:id="@+id/time_800"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="800ms"/>
            <RadioButton
                android:id="@+id/time_1s"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1s"/>
        </RadioGroup>
    <RadioGroup
        android:id="@+id/group_num"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/time_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1次"/>
        <RadioButton
            android:id="@+id/time_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:text="2次"/>
        <RadioButton
            android:id="@+id/time_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"/>
    </RadioGroup>
    <EditText
        android:id="@+id/dif_time"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="请输入系统误差时间(ms)！"/>
    <LinearLayout
        android:id="@+id/get_url"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="从服务器获取"/>
        <Button
            android:id="@+id/manual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="手动填写"/>
        <EditText
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入领券地址！"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>